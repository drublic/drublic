{
  "name": "drublic",
  "title": "drublic",
  "description": "",
  "version": "8.8.0",
  "homepage": "https://drublic.de/",
  "repository": {
    "type": "git",
    "url": "git@github.com:drublic/vc.git"
  },
  "scripts": {
    "start": "node dist/server/index.js",
    "start:dev": "nodemon server/index.ts",
    "ts:build": "rm -rf dist/ && tsc -p tsconfig.json",
    "css": "node ./scripts/css.js",
    "copy:images": "copyfiles --up 2 'src/img/**/*.{png,jpg,jpeg,svg,mp4}' public/img/",
    "copy:js": "copyfiles --up 2 'src/js/**/*' public/dist/",
    "copy:assets": "copyfiles -f --up 2 'src/posts/**/*.{png,jpg,jpeg,svg,mp4}' public/assets/",
    "copy": "yarn copy:images; yarn copy:js; yarn copy:assets",
    "js": "webpack",
    "build": "yarn css; yarn js; yarn copy; yarn ts:build",
    "postinstall": "yarn build"
  },
  "bugs": {
    "url": "https://github.com/use-init/init/issues"
  },
  "author": {
    "name": "Hans Christian Reinl",
    "url": "http://drublic.de"
  },
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "cacheDirectories": [
    "node_modules"
  ],
  "dependencies": {
    "@types/xml2js": "^0.4.5",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8",
    "compression": "^1.7.4",
    "copyfiles": "^2.1.1",
    "cors": "^2.8.5",
    "css-modal": "^1.5.0",
    "cssnano": "^4.1.10",
    "date-fns": "^2.2.1",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "fs-extra": "^8.1.0",
    "helmet": "^3.21.1",
    "jquery": "^3.4.1",
    "node-mailjet": "^3.3.1",
    "normalize.css": "^8.0.1",
    "postcss": "^7.0.18",
    "postcss-custom-properties": "^9.0.2",
    "postcss-import": "^12.0.1",
    "rss-parser": "^3.7.2",
    "sendmail": "^1.6.1",
    "showdown": "^1.9.0",
    "ts-lint": "^4.5.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/express-handlebars": "^0.0.33",
    "@types/fs-extra": "^8.0.0",
    "@types/helmet": "^0.0.44",
    "@types/node": "^12.7.5",
    "@types/showdown": "^1.9.3",
    "@warhol/tsconfig": "^1.1.1",
    "body-parser": "^1.19.0",
    "nodemon": "^1.19.2",
    "ts-node": "^8.4.1"
  }
}
