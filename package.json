  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon server/index.ts",
    "ts:build": "rm -rf dist/ && tsc -p tsconfig.json",
    "css": "node ./scripts/css.js",
    "copy:images": "copyfiles 'src/img/**/*' public/img/",
    "copy:js": "copyfiles 'src/js/**/*' public/dist/",
    "copy:assets": "copyfiles -f 'src/posts/**/*.{png,jpg,jpeg,svg}' public/assets/",
    "copy": "yarn copy:images; yarn copy:js; yarn copy:assets",
    "js": "webpack",
    "build": "yarn css; yarn js; yarn copy; yarn ts:build",
    "postinstall": "yarn build"
  },
