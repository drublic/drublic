
<!-- Open Source -->
<section class="container oss" id="oss">
  <h2>Articles</h2>

  <h3>From The Blog</h3>

  <ul class="posts__list posts__list--no-divider posts__list--no-top">
    {{#each (slice posts 0 5)}}
      {{> article-teaser--small
        title=this.title
        url=this.url
        date=this.date
      }}
    {{/each}}
  </ul>

  <p class="text--centered text--padded">
    <a href="{{baseUrl}}/blog/" class="button">
      Read more on my Blog
    </a>
  </p>

  <h3>
    <img
      src="{{baseUrl}}/img/wd.svg"
      alt="Working Draft Logo"
      class="oss--wd-logo"
    >

    Working Draft Podcast
  </h3>

  <ul class="posts__list posts__list--no-divider posts__list--no-top">
    {{#each wdPosts}}
      {{> article-teaser--small
        title=this.title
        url=this.url
        date=this.date
        description=""
      }}
    {{/each}}
    <li>
      {{> article-teaser--small
        title="and moreâ€¦"
        url="https://workingdraft.de/"
        description=""
      }}
    </li>
  </ul>

  <p class="text--centered text--padded">
    <a href="{{baseUrl}}/podcasting" class="button">
      More about my Podcasting
    </a>
  </p>

  <h3>On other websites</h3>

  <ul class="posts__list posts__list--no-divider posts__list--no-top">
    {{> article-teaser--small
      title="CSS Naming Conventions: Less Rules, more Fun on Medium.com"
