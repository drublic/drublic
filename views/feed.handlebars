<?xml version="1.0" encoding="utf-8"?><feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{title}}</title>
  <link href="{{baseUrl}}/feed" rel="self"/>
  <link href="{{baseUrl}}/"/>
  <id>{{baseUrl}}</id>
  <author>
    <name>Hans Christian Reinl</name>
    <email>info@drublic.de</email>
  </author>

  {{#each posts}}
    <entry>
      <title>{{this.title}}</title>
      <link href="{{@root/baseUrl}}/blog/{{this.slug}}/"/>
      <updated>{{formatDate this.date "yyyy-MM-dd"}}</updated>
      <id>{{@root/baseUrl}}/blog/{{this.slug}}/</id>
      <content><![CDATA[
        {{#if abstract}}
          {{{abstract}}}
        {{else}}
          Please read the article on my blog.
        {{/if}}
      ]]></content>
    </entry>
  {{/each}}
</feed>
